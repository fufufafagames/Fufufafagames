<%- include('../layouts/header', { title: title }) %> <%-
include('../partials/navbar') %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="form-card">
        <div class="text-center mb-4">
          <i class="fas fa-user-edit fa-3x text-aqua"></i>
          <h2 class="mt-3">Edit Profile</h2>
          <p class="text-muted">Update your profile information</p>
        </div>

        <form action="/profile/update/me?_method=PUT" method="POST">
          <div class="mb-3">
            <label for="name" class="form-label">
              <i class="fas fa-user"></i> Full Name
            </label>
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              value="<%= profileUser.name %>"
              required
            />
          </div>

          <div class="mb-3">
            <label for="email" class="form-label">
              <i class="fas fa-envelope"></i> Email Address
            </label>
            <input
              type="email"
              class="form-control"
              id="email"
              value="<%= profileUser.email %>"
              disabled
            />
            <small class="text-muted">Email cannot be changed</small>
          </div>

          <div class="mb-3">
            <label for="avatar" class="form-label">
              <i class="fas fa-image"></i> Avatar URL
            </label>
            <input
              type="url"
              class="form-control"
              id="avatar"
              name="avatar"
              value="<%= profileUser.avatar || '' %>"
              placeholder="https://example.com/avatar.jpg"
            />
            <small class="text-muted"
              >Enter a URL to your profile picture</small
            >
          </div>

          <div class="mb-4">
            <label for="bio" class="form-label">
              <i class="fas fa-align-left"></i> Bio
            </label>
            <textarea
              class="form-control"
              id="bio"
              name="bio"
              rows="4"
              maxlength="500"
            >
<%= profileUser.bio || '' %></textarea
            >
            <small class="text-muted"
              >Tell us about yourself (max 500 characters)</small
            >
          </div>

          <div class="d-grid gap-2">
            <button type="submit" class="btn btn-aqua btn-lg">
              <i class="fas fa-save"></i> Save Changes
            </button>
            <a
              href="/profile/<%= profileUser.id %>"
              class="btn btn-outline-aqua"
            >
              <i class="fas fa-times"></i> Cancel
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../layouts/footer') %>
