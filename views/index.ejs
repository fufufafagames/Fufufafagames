                <div class="event-side-banner">
                    <img src="<%= activeEvent.banner_url || 'https://via.placeholder.com/400x300' %>" 
                         alt="Event Banner">
                </div>

                <div class="event-text-box">
                    <h3><%= activeEvent.title %></h3>
                    <p>
                        <%= activeEvent.description %>
                    </p>
                    
                    <% if (activeEvent.target_url) { %>
                    <a href="<%= activeEvent.target_url %>" class="btn-aqua text-white text-decoration-none px-4 py-2 rounded-pill d-inline-block">
                        Lihat Event <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                    <% } %>
                </div>

            </div>

        </div>
      </div>
      <% } %>

      <!-- <br> -->
      <!-- untuk tampilan yg icon saja  -->
      <% if (pcGames && pcGames.length > 0) { %>
      <div class="container" style="margin-bottom: 80px;">
        
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-white fw-bold">Game Khusus PC (Download)</h4> <a href="/all-games?type=download" class="text-info text-decoration-none small">Lihat Semua <i class="fas fa-arrow-right"></i></a>
        </div>

        <div class="horizontal-scroll-container">
          
          <% pcGames.forEach((game, index) => { %>
            
            <a href="/games/<%= game.slug %>" class="square-game-card">
              
              <div class="square-img-container">
                 <% if (game.icon_url && game.icon_url !== '') { %>
                    <img src="<%= game.icon_url %>" alt="<%= game.title %>"
                         onerror="this.onerror=null;this.src='https://placehold.co/200x200/2a2a40/00D9FF?text=<%= game.title.charAt(0) %>';">
                 <% } else { %>
                    <img src="<%= game.thumbnail_url || 'https://placehold.co/200x200' %>" alt="<%= game.title %>">
                 <% } %>
              </div>

              <div class="text-start"> <div class="game-title-small" title="<%= game.title %>">
                      <%= game.title %>
                  </div>
                  
                  <div class="game-meta-small">
                      <span><%= (parseFloat(game.avg_rating) || 0).toFixed(1) %> <i class="fas fa-star text-warning" style="font-size: 0.7rem;"></i></span>
                      <span style="margin: 0 4px;">â€¢</span>
                      <span><%= game.price === 0 ? 'Free' : 'Rp. ' + parseInt(game.price).toLocaleString('id-ID') %></span>
                  </div>
              </div>

            </a>

          <% }); %>

        </div>
      </div>
      <% } %>

      <!-- Buat Banner Iklan  -->
      <div class="container ad-container">
        <div class="ad-placeholder">
            <span>[ SPACE IKLAN 728x250 ]<br><small>Tempatkan bannermu di sini</small></span>
        </div>
        <!-- kalau fotonnya udah ada  -->
        <!-- <div class="container ad-container">
          <a href="https://link-iklan-tujuannya.com">
              <img src="/images/banner-promo-topup.jpg" style="width: 100%; border-radius: 12px;">
          </a>
        </div> -->
      </div>

      <div class="container" style="margin-bottom: 30px;">

      <!-- LATEST UPDATED SECTION -->
      <% if (latestGames && latestGames.length > 0) { %>
      <div class="section-header d-flex justify-content-between align-items-center mb-4 mt-5">
        <h2 class="section-title mb-0">Latest Updated</h2>
        <a href="/games?sort=newest" class="see-all-link">See All <i class="fas fa-arrow-right"></i></a>
      </div>

      <div class="latest-scroll-container">
        <% latestGames.forEach(game => { %>
          <a href="/games/<%= game.slug %>" class="latest-game-card">
            <div class="latest-game-icon">
              <% if (game.icon_url && game.icon_url !== '') { %>
                <img src="<%= game.icon_url %>" alt="<%= game.title %>"
                     onerror="this.onerror=null;this.src='https://placehold.co/200x200/2a2a40/00D9FF?text=<%= game.title.charAt(0) %>';">
              <% } else { %>
                <img src="<%= game.thumbnail_url || 'https://placehold.co/200x200' %>" alt="<%= game.title %>">
              <% } %>
            </div>
            <div class="latest-game-title"><%= game.title %></div>
          </a>
        <% }); %>
      </div>
      <% } %>


    </div>

    <!-- Populer Category Section -->
    <% if (popularCategoryName && popularCategoryGames && popularCategoryGames.length > 0) { %>
    <section class="landing-section container popular-category-section">
      <div class="d-flex justify-content-between align-items-center popular-category-header-container">
        <h2 class="section-title popular-category-header mb-0">Populer Category: <span class="text-info"><%= popularCategoryName %></span></h2>
        
        <!-- Pagination Controls -->
        <% if (popularCategoryGames.length > 6) { %>
        <div class="pagination-toggle">
            <button class="btn btn-sm btn-outline-info active" onclick="showPage(1)" id="btn-page-1">1</button>
            <button class="btn btn-sm btn-outline-info" onclick="showPage(2)" id="btn-page-2">2</button>
        </div>
        <% } %>
      </div>

      <div class="popular-category-grid" id="popular-grid">
        <% popularCategoryGames.forEach((game, index) => { %>
        <a href="/games/<%= game.slug %>" class="playstore-card popular-item">
            <div class="card-banner">
                <% if (game.icon_url && game.icon_url !== '') { %>
                    <img src="<%= game.icon_url %>" alt="<%= game.title %>" class="game-icon"
                         data-fallback="<%= game.thumbnail_url || 'https://placehold.co/180x180/1a1a2e/00D9FF?text=' + (game.title.charAt(0) || 'G') %>"
                         onerror="this.onerror=null; this.src=this.dataset.fallback;">
                <% } else { %>
                    <img src="<%= game.thumbnail_url || 'https://placehold.co/180x180/1a1a2e/00D9FF?text=No+Icon' %>" alt="<%= game.title %>" class="game-icon">
                <% } %>
            </div>
            <div class="card-details">
                <div class="game-info-text">
                    <h3 class="game-title"><%= game.title %></h3>
                    <div class="game-meta-row">
                        <span class="game-price"><%= game.price === 0 ? 'Free' : 'Rp. ' + parseInt(game.price).toLocaleString('id-ID') %></span>
                        <span class="game-rating">
                            <i class="fas fa-star"></i>
                            <%= game.avg_rating || '4.5' %>
                        </span>
                    </div>
                </div>
            </div>
        </a>
        <% }); %>
      </div>
      
      <script>
        function showPage(page) {
            const isMobile = window.innerWidth < 768;
            const itemsPerPage = isMobile ? 3 : 6;
            const items = document.querySelectorAll('.popular-item');
            
            // Update buttons
            document.querySelectorAll('.pagination-toggle .btn').forEach(btn => btn.classList.remove('active'));
            const btn = document.getElementById('btn-page-' + page);
            if(btn) btn.classList.add('active');

            // Calculate range
            const startStr = (page - 1) * itemsPerPage;
            const endStr = startStr + itemsPerPage;

            // Toggle items
            items.forEach((item, index) => {
                if (index >= startStr && index < endStr) {
                    item.style.display = 'flex';
                } else {
                    item.style.display = 'none';
                }
            });
        }

        // Initialize on load and resize
        document.addEventListener('DOMContentLoaded', () => showPage(1));
        window.addEventListener('resize', () => showPage(1));
      </script>
    </section>
    <% } %>

