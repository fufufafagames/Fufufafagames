    <style>
      /* Landing Page Specific Styles - Scoped to not affect navbar */
      /* Dark theme dengan cyan accent (#00D9FF) */

      body.landing-page {
        background: linear-gradient(135deg, #0f0f1e 0%, #1a1a2e 100%);
        min-height: 100vh;
      }

      /* Hero Section */
      .landing-hero {
        padding: 100px 20px 80px;
        text-align: center;
        background: linear-gradient(
          180deg,
          rgba(0, 217, 255, 0.1) 0%,
          transparent 100%
        );
      }

      .landing-hero .hero-title {
        font-size: 3.5rem;
        font-weight: 800;
        color: #ffffff;
        margin-bottom: 20px;
        text-shadow: 0 0 30px rgba(0, 217, 255, 0.5);
      }

      .landing-hero .hero-subtitle {
        font-size: 1.3rem;
        color: #b8b8d1;
        margin-bottom: 40px;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
      }

      .landing-hero .hero-btn {
        display: inline-block;
        padding: 15px 40px;
        background: linear-gradient(135deg, #00d9ff 0%, #0099cc 100%);
        color: #0f0f1e;
        text-decoration: none;
        border-radius: 50px;
        font-weight: 700;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        box-shadow: 0 10px 30px rgba(0, 217, 255, 0.3);
      }

      .landing-hero .hero-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(0, 217, 255, 0.5);
        color: #0f0f1e;
      }

      /* Section Styles */
      .landing-section {
        padding: 60px 20px;
        max-width: 1200px;
        margin: 0 auto;
      }

      .landing-section .section-title {
        font-size: 2.5rem;
        color: #ffffff;
        text-align: center;
        margin-bottom: 50px;
        position: relative;
      }

      .landing-section .section-title::after {
        content: "";
        display: block;
        width: 80px;
        height: 4px;
        background: linear-gradient(90deg, #00d9ff 0%, #0099cc 100%);
        margin: 15px auto 0;
        border-radius: 2px;
      }

      /* Featured Games Grid */
      .landing-games-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 30px;
        margin-bottom: 40px;
      }

      .landing-game-card {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.3s ease;
        border: 1px solid rgba(0, 217, 255, 0.1);
        text-decoration: none;
        display: block;
      }

      .landing-game-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0, 217, 255, 0.2);
        border-color: rgba(0, 217, 255, 0.5);
      }

      .landing-game-card .game-thumbnail {
        width: 100%;
        height: 200px;
        object-fit: cover;
      }

      .landing-game-card .game-info {
        padding: 20px;
      }

      .landing-game-card .game-title {
        font-size: 1.3rem;
        color: #ffffff;
        margin-bottom: 10px;
        font-weight: 600;
      }

      .landing-game-card .game-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 15px;
        font-size: 0.9rem;
        color: #b8b8d1;
      }

      .landing-game-card .game-category {
        background: rgba(0, 217, 255, 0.2);
        color: #00d9ff;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
      }

      .landing-game-card .game-stats {
        display: flex;
        gap: 15px;
      }

      .landing-game-card .stat-item {
        display: flex;
        align-items: center;
        gap: 5px;
      }

      /* Categories Section */
      .landing-categories-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 15px;
      }

      .landing-category-card {
        background: rgba(0, 217, 255, 0.1);
        padding: 30px 20px;
        border-radius: 15px;
        text-align: center;
        transition: all 0.3s ease;
        border: 2px solid transparent;
        cursor: pointer;
        text-decoration: none;
        display: block;
      }

      .landing-category-card:hover {
        background: rgba(0, 217, 255, 0.2);
        border-color: #00d9ff;
        transform: scale(1.05);
      }

      .landing-category-card .category-name {
        color: #ffffff;
        font-weight: 600;
        font-size: 1.1rem;
      }

      /* Empty State */
      .landing-empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #b8b8d1;
      }

      .landing-empty-state .empty-state-icon {
        font-size: 4rem;
        margin-bottom: 20px;
        opacity: 0.5;
      }

      .landing-empty-state h3 {
        color: #ffffff;
        margin-bottom: 10px;
      }

      /* Footer */
      .landing-footer {
        background: rgba(0, 0, 0, 0.3);
        padding: 40px 20px;
        text-align: center;
        border-top: 1px solid rgba(0, 217, 255, 0.1);
        margin-top: 60px;
      }

      .landing-footer .footer-links {
        display: flex;
        justify-content: center;
        gap: 30px;
        margin-bottom: 20px;
      }

      .landing-footer .footer-link {
        color: #00d9ff;
        text-decoration: none;
        transition: color 0.3s ease;
      }

      .landing-footer .footer-link:hover {
        color: #ffffff;
      }

      .landing-footer .footer-text {
        color: #b8b8d1;
        font-size: 0.9rem;
      }

      /* Responsive Design */
      @media (max-width: 768px) {
        .landing-hero .hero-title {
          font-size: 2.5rem;
        }

        .landing-hero .hero-subtitle {
          font-size: 1.1rem;
        }

        .landing-section .section-title {
          font-size: 2rem;
        }

        .landing-games-grid {
          grid-template-columns: 1fr;
        }

        .landing-categories-grid {
          grid-template-columns: repeat(2, 1fr);
        }

        .landing-footer .footer-links {
          flex-direction: column;
          gap: 15px;
        }
      }

      /* --- PLAYSTORE SCROLL STYLE (Tambahkan ini) --- */
      /* --- GANTI CSS INI --- */
      .horizontal-scroll-container {
        display: flex;
        overflow-x: auto;
        gap: 24px;
        
        /* Kita hapus padding kiri-kanan yang ribet kemarin */
        padding: 5px 5px 25px 5px; 
        
        scroll-snap-type: x mandatory;
        scroll-behavior: smooth;
        
        /* Sembunyikan Scrollbar */
        -ms-overflow-style: none;
        scrollbar-width: none;
      }

      .horizontal-scroll-container::-webkit-scrollbar {
        display: none;
      }

      .horizontal-scroll-container .playstore-card {
        flex: 0 0 auto;
        width: 410px;
        scroll-snap-align: start;
      }
      /* ----------------------------------------------- */
      /* --- STYLE KARTU KOTAK (SQUARE) --- */
      .square-game-card {
        flex: 0 0 auto;       /* Supaya tidak tergencet */
        width: 220px;         /* Lebar fix (bisa diubah jadi 140px atau 180px) */
        text-decoration: none;
        transition: transform 0.2s ease;
      }

      .square-game-card:hover {
        transform: translateY(-5px); /* Efek naik dikit pas di-hover */
      }

      /* Gambar Kotak Besar */
      .square-game-card .square-img-container {
        width: 100%;
        aspect-ratio: 1 / 1;  /* KUNCI: Memaksa rasio 1:1 (Kotak Sempurna) */
        border-radius: 24px;  /* Lengkungan sudut besar a la Play Store modern */
        overflow: hidden;
        margin-bottom: 12px;  /* Jarak gambar ke tulisan bawah */
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.1);
      }

      .square-game-card img {
        width: 100%;
        height: 100%;
        object-fit: cover;    /* Gambar penuh tanpa gepeng */
      }

      /* Teks di Bawah */
      .square-game-card .game-title-small {
        color: #fff;
        font-size: 0.95rem;
        font-weight: 600;
        margin-bottom: 4px;
        
        /* Trik kalau judul kepanjangan jadi ... */
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      .square-game-card .game-meta-small {
        font-size: 0.8rem;
        color: #b8b8d1;
        display: flex;
        align-items: center;
        gap: 5px;
      }
      /* ----------------------------------------------- */

      /* --- STYLE KOTAK IKLAN --- */
      .ad-container {
        margin: 60px 0; /* Jarak atas-bawah biar lega */
        text-align: center;
      }

      .ad-placeholder {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 250px; /* Tinggi standar banner iklan sedang */
        
        /* Desain "Kotak Kosong" */
        background: rgba(255, 255, 255, 0.03); /* Warna background tipis */
        border: 2px dashed rgba(0, 217, 255, 0.3); /* Garis putus-putus Cyan */
        border-radius: 12px;
        color: #b8b8d1;
        font-family: monospace; /* Font ala kodingan */
        font-size: 1.2rem;
        
        transition: all 0.3s ease;
      }

      /* Efek pas mouse lewat (biar tau ini bisa diklik nantinya) */
      .ad-placeholder:hover {
        background: rgba(0, 217, 255, 0.05);
        border-color: #00d9ff;
        color: #fff;
        cursor: pointer;
      }
      /*----------------------------------------------------------------------*/

      /* --- STYLE SECTION EVENT (BENTO GRID) --- */
      .event-card-wrapper {
        background: rgba(255, 255, 255, 0.03); /* Background tipis penyatu */
        border-radius: 30px;
        padding: 20px;
        border: 1px solid rgba(255, 255, 255, 0.05);
      }

      /* Kiri: Video Area */
      .event-video-box {
        width: 100%;
        aspect-ratio: 16 / 9; /* Rasio standar video YouTube */
        background: #000;
        border-radius: 24px;
        overflow: hidden;
        position: relative;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        border: 1px solid rgba(0, 217, 255, 0.2);
      }

      .event-video-box iframe, 
      .event-video-box video {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      /* Kanan Atas: Banner Kecil */
      .event-side-banner {
        width: 100%;
        height: 180px; /* Tinggi banner samping */
        border-radius: 24px;
        overflow: hidden;
        margin-bottom: 20px;
        position: relative;
        border: 1px solid rgba(255, 255, 255, 0.1);
      }

      .event-side-banner img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
      }

      .event-side-banner:hover img {
        transform: scale(1.05);
      }

      /* Kanan Bawah: Deskripsi Text */
      .event-text-box {
        color: #b8b8d1;
      }

      .event-text-box h3 {
        color: #fff;
        font-weight: 700;
        margin-bottom: 10px;
        font-size: 1.5rem;
      }

      .event-text-box p {
        font-size: 0.95rem;
        line-height: 1.6;
        margin-bottom: 15px;
      }
      /*----------------------------------------------------------------------*/
    </style>
  </head>
