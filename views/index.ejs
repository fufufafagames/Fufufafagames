                <div class="overlay">
                    <i class="fas fa-play"></i>
                </div>
                </div>

                <div class="card-details">
                
                <div class="game-logo">
                    <% if (game.icon_url && game.icon_url !== '') { %>
                        <img src="<%= game.icon_url %>" alt="Icon" 
                            onerror="this.onerror=null;this.src='https://placehold.co/100x100/2a2a40/00D9FF?text=<%= game.title.charAt(0) %>';">
                    <% } else { %>
                        <img src="https://placehold.co/100x100/2a2a40/00D9FF?text=<%= game.title.charAt(0) %>" alt="Icon">
                    <% } %>
                </div>

                <div class="game-info-text">
                    <h3 class="game-title" title="<%= game.title %>"><%= game.title %></h3>
                    
                    <div class="game-meta-row">
                    <span class="game-price">
                        <%= game.price === 0 ? 'Free' : 'Rp. ' + parseInt(game.price).toLocaleString('id-ID') %>
                    </span>
                    <span class="game-rating">
                        <%= (parseFloat(game.avg_rating) || 0).toFixed(1) %> <i class="fas fa-star"></i>
                    </span>
                    </div>
                </div>

                </div>
            </a>
            <% }); %>
        <% } else { %>
            <p class="text-white ps-4">No recommended games available yet.</p>
        <% } %>
