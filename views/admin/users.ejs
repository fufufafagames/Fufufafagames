<%- include('partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-white fw-bold">User Management</h2>
    <!-- Future: Search Bar -->
</div>

<div class="admin-card">
    <div class="table-responsive d-none d-md-block">
        <table class="table table-dark table-hover align-middle text-white mb-0" style="background: transparent;">
            <thead class="bg-dark">
                <tr>
                    <th class="py-3">User info</th>
                    <th class="py-3">Role</th>
                    <th class="py-3">Joined Date</th>
                    <th class="py-3">Status</th>
                    <th class="py-3 text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(u => { %>
                <tr>
                    <td>
                        <div class="d-flex align-items-center gap-3">
                            <img src="<%= u.avatar || 'https://via.placeholder.com/40' %>" class="rounded-circle border border-secondary" width="45" height="45">
                            <div>
                                <div class="fw-bold"><%= u.name %></div>
                                <small class="text-white-50"><%= u.email %></small>
                            </div>
                        </div>
                    </td>
                    <td>
                        <% 
                            // Check admin logic visually
                            const SPECIFIC_ADMINS = ["coks.helper@gmail.com", "fufufafagames@gmail.com", "fufufafagames.id"];
                            const isAdmin = (u.email && u.email.endsWith("@coks.pro")) || SPECIFIC_ADMINS.includes(u.email);
                        %>
                        <% if(isAdmin) { %>
                            <span class="badge bg-warning text-dark"><i class="fas fa-crown me-1"></i> Admin</span>
                        <% } else { %>
                            <span class="badge bg-secondary">User</span>
                        <% } %>
                    </td>
                    <td class="text-white-50"><%= new Date(u.created_at).toLocaleDateString() %></td>
                    <td>
                        <% if (u.is_banned) { %>
                            <span class="badge bg-danger">BANNED</span>
                            <div class="small text-danger mt-1">Reason: <%= u.ban_reason %></div>
                        <% } else { %>
                            <span class="badge bg-success">Active</span>
                        <% } %>
                    </td>
                    <td class="text-end">
                        <% if (isAdmin) { %>
                             <button class="btn btn-sm btn-secondary disabled" title="Cannot ban admin"><i class="fas fa-ban"></i></button>
                        <% } else if (u.is_banned) { %>
                            <form action="/admin/users/<%= u.id %>/unban" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Unban this user?')">
                                    <i class="fas fa-unlock"></i> Unban
                                </button>
                            </form>
                        <% } else { %>
                            <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#banModal<%= u.id %>">
                                <i class="fas fa-ban"></i> Ban
                            </button>
                            
                            <!-- Ban Modal -->
                            <div class="modal fade" id="banModal<%= u.id %>" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content bg-dark text-white border-secondary">
                                        <form action="/admin/users/<%= u.id %>/ban" method="POST">
                                            <div class="modal-header border-secondary">
                                                <h5 class="modal-title">Ban User: <%= u.name %></h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body text-start">
                                                <p class="text-danger"><i class="fas fa-exclamation-triangle"></i> Access will be immediately revoked.</p>
                                                <div class="mb-3">
                                                    <label class="form-label">Reason for ban:</label>
                                                    <textarea name="reason" class="form-control bg-black text-white border-secondary" rows="3" required placeholder="E.g. Violation of terms, Spamming..."></textarea>
                                                </div>
                                            </div>
                                            <div class="modal-footer border-secondary">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-danger">Confirm Ban</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Mobile Card View -->
    <div class="d-md-none">
        <% if(users.length === 0) { %>
            <div class="text-center py-4 text-white-50">No users found.</div>
        <% } %>

        <% users.forEach(u => { %>
            <% 
                const SPECIFIC_ADMINS = ["coks.helper@gmail.com", "fufufafagames@gmail.com", "fufufafagames.id"];
                const isAdmin = (u.email && u.email.endsWith("@coks.pro")) || SPECIFIC_ADMINS.includes(u.email);
            %>
            <div class="card bg-dark border-secondary mb-3 shadow-sm">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div class="d-flex align-items-center gap-3">
                            <img src="<%= u.avatar || 'https://via.placeholder.com/40' %>" class="rounded-circle border border-secondary" width="50" height="50">
                            <div>
                                <h6 class="mb-0 text-white fw-bold"><%= u.name %></h6>
                                <small class="text-white-50" style="font-size: 0.75rem;"><%= u.email %></small>
                            </div>
                        </div>
                        <% if(isAdmin) { %>
                            <span class="badge bg-warning text-dark"><i class="fas fa-crown"></i></span>
                        <% } %>
                    </div>
                    
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="small text-white-50">
                            Joined: <%= new Date(u.created_at).toLocaleDateString() %>
                        </div>
                        <div>
                             <% if (u.is_banned) { %>
                                <span class="badge bg-danger">BANNED</span>
                            <% } else { %>
                                <span class="badge bg-success">Active</span>
                            <% } %>
                        </div>
                    </div>
                    
                    <% if (u.is_banned) { %>
                        <div class="alert alert-danger py-1 px-2 small mb-3">
                            Reason: <%= u.ban_reason %>
                        </div>
                    <% } %>

                    <div class="d-grid">
                        <% if (isAdmin) { %>
                             <button class="btn btn-sm btn-secondary disabled">Cannot Action Admin</button>
                        <% } else if (u.is_banned) { %>
                            <form action="/admin/users/<%= u.id %>/unban" method="POST">
                                <button type="submit" class="btn btn-sm btn-success w-100" onclick="return confirm('Unban this user?')">
                                    <i class="fas fa-unlock me-2"></i> Unban User
                                </button>
                            </form>
                        <% } else { %>
                            <button type="button" class="btn btn-sm btn-danger w-100" data-bs-toggle="modal" data-bs-target="#banModal<%= u.id %>">
                                <i class="fas fa-ban me-2"></i> Ban User
                            </button>
                        <% } %>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('partials/footer') %>
