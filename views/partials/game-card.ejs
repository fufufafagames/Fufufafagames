
<!-- Game Card Component (New 16:9 Design) -->
<a href="/games/<%= game.slug %>" class="text-decoration-none h-100 d-block text-white" data-video-url="<%= game.video_url || '' %>">
    <div class="game-card h-100 d-flex flex-column">
        <!-- Image Wrapper 16:9 -->
        <div class="game-card-img-wrapper">
             <img src="<%= game.thumbnail_url || 'https://via.placeholder.com/400x225/1a1a2e/ffffff?text=No+Image' %>" alt="<%= game.title %>" loading="lazy">
             
             <!-- Overlay Interactive -->
             <div class="game-card-overlay">
                <span class="btn btn-info rounded-pill btn-sm fw-bold shadow-lg">
                    <i class="fas fa-play me-1"></i> Play Now
                </span>
            </div>
        </div>
        
        <!-- Category Badge (Floating) -->
        <div class="game-badge position-absolute top-0 end-0 m-2 z-2">
            <span class="badge bg-dark border border-aqua text-aqua rounded-pill shadow-sm"><%= game.category || 'Uncategorized' %></span>
        </div>
        
        <!-- Card Body -->
        <div class="game-card-body p-3 d-flex flex-column flex-grow-1">
            <div class="d-flex justify-content-between align-items-start mb-2">
                 <h6 class="game-title text-white text-truncate mb-0 flex-grow-1 pe-2" title="<%= game.title %>"><%= game.title %></h6>
            </div>
            
            <div class="text-warning small d-flex align-items-center mb-1">
                 <i class="fas fa-star me-1"></i> 
                 <span class="ms-1 fw-bold"><%= game.avg_rating != null ? parseFloat(game.avg_rating).toFixed(1) : '0.0' %></span>
            </div>
            
             <p class="game-meta mb-3 text-truncate text-aqua small">
                 <i class="fas fa-user-circle me-1"></i> <%= game.author_name || 'Anonymous' %>
            </p>
             
             <div class="mt-auto d-flex justify-content-between align-items-center border-top border-secondary pt-2">
                <small class="text-white-50"><i class="fas fa-eye me-1"></i> <%= game.play_count %> plays</small>
                <% if(game.price_type === 'paid') { %>
                   <span class="text-info fw-bold small">Rp. <%= parseFloat(game.price).toLocaleString('id-ID') %></span>
                <% } else { %>
                   <span class="text-success fw-bold small">Free</span>
                <% } %>
            </div>
        </div>
    </div>
</a>
