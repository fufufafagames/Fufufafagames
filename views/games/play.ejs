<%- include('../layouts/header', { title: title }) %> <%-
include('../partials/navbar') %>

<div class="container-fluid play-container">
  <div class="play-header">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h2><i class="fas fa-gamepad"></i> <%= game.title %></h2>
          <p class="mb-0 text-muted">by <%= game.author_name %></p>
        </div>
        <div>
          <a href="/games/<%= game.slug %>" class="btn btn-outline-aqua">
            <i class="fas fa-arrow-left"></i> Back to Game
          </a>
          <a
            href="<%= game.github_url %>"
            target="_blank"
            class="btn btn-outline-aqua"
          >
            <i class="fab fa-github"></i> GitHub
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="game-iframe-container">
    <% if (game.game_type === 'playable') { %>
    <iframe
      src="<%= gameUrl %>"
      frameborder="0"
      allowfullscreen
      sandbox="allow-scripts allow-same-origin allow-pointer-lock allow-forms"
      class="game-iframe"
    ></iframe>
    <% } else { %>
    <div class="text-center py-5">
      <i class="fas fa-download fa-5x text-aqua mb-4"></i>
      <h3>This is a downloadable game</h3>
      <p class="text-muted mb-4">Download the game from GitHub to play</p>
      <a
        href="<%= game.github_url %>"
        target="_blank"
        class="btn btn-aqua btn-lg"
      >
        <i class="fas fa-download"></i> Download from GitHub
      </a>
    </div>
    <% } %>
  </div>
</div>

<%- include('../layouts/footer') %>
