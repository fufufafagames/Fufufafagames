<%- include('../layouts/header', { title: title }) %>
<%- include('../partials/navbar') %>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="form-card">
                <div class="text-center mb-4">
                    <i class="fas fa-edit fa-3x text-aqua"></i>
                    <h2 class="mt-3">Edit Game</h2>
                    <p class="text-muted">Update your game information</p>
                </div>
                
                <form action="/games/<%= game.slug %>?_method=PUT" method="POST">
                    <div class="mb-3">
                        <label for="title" class="form-label">
                            <i class="fas fa-heading"></i> Game Title *
                        </label>
                        <input type="text" class="form-control" id="title" name="title" value="<%= game.title %>" required minlength="3" maxlength="255">
                    </div>
                    
                    <div class="mb-3">
                        <label for="description" class="form-label">
                            <i class="fas fa-align-left"></i> Description *
                        </label>
                        <textarea class="form-control" id="description" name="description" rows="5" required minlength="50"><%= game.description %></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label for="github_url" class="form-label">
                            <i class="fab fa-github"></i> GitHub URL *
                        </label>
                        <input type="url" class="form-control" id="github_url" name="github_url" value="<%= game.github_url %>" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="thumbnail_url" class="form-label">
                            <i class="fas fa-image"></i> Thumbnail URL
                        </label>
                        <input type="url" class="form-control" id="thumbnail_url" name="thumbnail_url" value="<%= game.thumbnail_url %>">
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="category" class="form-label">
                                <i class="fas fa-tag"></i> Category *
                            </label>
                            <select class="form-control" id="category" name="category" required>
                                <% categories.forEach(cat => { %>
                                    <option value="<%= cat %>" <%= game.category === cat ? 'selected' : '' %>><%= cat %></option>
                                <% }); %>
                            </select>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="tags" class="form-label">
                                <i class="fas fa-tags"></i> Tags
                            </label>
                            <input type="text" class="form-control" id="tags" name="tags" value="<%= JSON.parse(game.tags).join(', ') %>">
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-aqua btn-lg">
                            <i class="fas fa-save"></i> Save Changes
                        </button>
                        <a href="/games/<%= game.slug %>" class="btn btn-outline-aqua">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/footer') %>