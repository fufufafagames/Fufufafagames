<%- include('../layouts/header', { title: title }) %> <%-
include('../partials/navbar') %>

<!-- Link ke auth.css -->
<link rel="stylesheet" href="/css/auth.css" />

<div class="container auth-container">
  <div class="row justify-content-center">
    <div class="col-12">
      <div class="auth-card">
        <!-- Header -->
        <div class="text-center mb-4">
          <i class="fas fa-gamepad fa-3x text-aqua"></i>
          <h2 class="mt-3">Welcome Back!</h2>
          <p class="text-white">Login to continue playing</p>
        </div>

        <!-- OAuth Buttons -->
        <div class="oauth-buttons">
          <button type="button" class="oauth-btn" data-provider="google">
            <img src="/icons/google.svg" alt="Google" />
            Sign in with Google
          </button>
          <button type="button" class="oauth-btn" data-provider="discord">
            <img src="/icons/discord.svg" alt="Discord" />
            Sign in with Discord
          </button>
          <button type="button" class="oauth-btn" data-provider="github">
            <img src="/icons/github.svg" alt="Github" />
            Sign in with Github
          </button>
        </div>

        <!-- Divider -->
        <div class="oauth-divider">
          <span>OR</span>
        </div>

        <!-- Login Form -->
        <form action="/login" method="POST">
          <div class="mb-3">
            <label for="email" class="form-label">
              <i class="fas fa-envelope"></i> Email Address
            </label>
            <input
              type="email"
              class="form-control"
              id="email"
              name="email"
              placeholder="Enter your email"
              required
            />
          </div>

          <div class="mb-3">
            <label for="password" class="form-label">
              <i class="fas fa-lock"></i> Password
            </label>
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              placeholder="Enter your password"
              required
            />
          </div>

          <!-- Forgot Password Link -->
          <div class="forgot-password-link">
            <a href="/forgot-password" class="text-aqua">Forgot Password?</a>
          </div>

          <button type="submit" class="btn btn-aqua w-100 mb-3">
            <i class="fas fa-sign-in-alt"></i> Login
          </button>

          <div class="text-center">
            <p class="mb-0">
              Don't have an account?
              <a href="/register" class="text-aqua">Register here</a>
            </p>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- OAuth Handler Script -->
<script>
  // Handle OAuth button clicks
  document.querySelectorAll(".oauth-btn").forEach((button) => {
    button.addEventListener("click", function () {
      const provider = this.getAttribute("data-provider");
      // Redirect ke OAuth route
      window.location.href = `/auth/${provider}`;
    });
  });
</script>

