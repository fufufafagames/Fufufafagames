# ===================================
# APPLICATION CONFIGURATION
# ===================================
APP_NAME=Fufufafagames
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
APP_TIMEZONE=Asia/Jakarta

# ===================================
# SUPABASE DATABASE CONFIGURATION
# ===================================
# Connection String (Primary method for Node.js)
# Get this from: Supabase Dashboard > Settings > Database > Connection string > URI
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@YOUR_HOST:5432/postgres?sslmode=require

# Individual Database Credentials (Backup/Alternative)
DB_CONNECTION=postgresql
DB_HOST=your-project.supabase.co
DB_PORT=5432
DB_DATABASE=postgres
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_SSL=true

# Alternative Direct Connection (lebih cepat tapi tanpa pooling)
# DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@YOUR_DIRECT_HOST:5432/postgres?sslmode=require

# ===================================
# SUPABASE API KEYS (untuk OAuth & Auth)
# ===================================
# Get these from: Supabase Dashboard > Settings > API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here

# ===================================
# OAUTH PROVIDERS (Supabase)
# ===================================
# OAuth providers sudah dienable di Supabase Dashboard
# Providers: Google, Discord, Github
# 
# Setup OAuth:
# 1. Enable provider di Supabase Dashboard > Authentication > Providers
# 2. Dapatkan Client ID dan Client Secret dari provider:
#    - Google: https://console.cloud.google.com/
#    - Discord: https://discord.com/developers/applications
#    - Github: https://github.com/settings/developers
# 3. Tambahkan Redirect URI di provider settings:
#    https://[YOUR-PROJECT-REF].supabase.co/auth/v1/callback
# 4. Paste Client ID dan Client Secret ke Supabase Dashboard
#
# Callback URL untuk aplikasi ini: {APP_URL}/auth/callback
# Contoh: http://localhost:3000/auth/callback

# ===================================
# SECURITY & AUTHENTICATION
# ===================================
APP_ADMIN_TOKEN=your-admin-token
SESSION_SECRET=fufufafa-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-key-here-change-in-production

# Bcrypt Rounds (untuk password hashing)
BCRYPT_ROUNDS=12

# ===================================
# SESSION CONFIGURATION
# ===================================
SESSION_LIFETIME=86400
SESSION_NAME=fufufafagames_session
SESSION_SECURE=false
SESSION_HTTP_ONLY=true

# ===================================
# CACHE CONFIGURATION
# ===================================
CACHE_PREFIX=fufufafagames_cache_

# ===================================
# LOGGING
# ===================================
LOG_LEVEL=debug
LOG_CHANNEL=console

# ===================================
# REDIS (Optional - untuk production)
# ===================================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===================================
# EMAIL CONFIGURATION (Supabase SMTP)
# ===================================
# Supabase handles email automatically untuk:
# - Email verification
# - Password reset
# - Magic links
# Configure di Supabase Dashboard > Authentication > Email Templates

MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USER=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@fufufafagames.id
MAIL_FROM_NAME=Fufufafagames
MAIL_ENCRYPTION=tls

# ===================================
# AWS S3 (Optional - untuk file storage)
# ===================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ===================================
# GAME UPLOAD CONFIGURATION
# ===================================
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=.html,.js,.css,.png,.jpg,.jpeg,.gif,.mp3,.wav
UPLOAD_PATH=./public/uploads/games

# ===================================
# RATE LIMITING
# ===================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===================================
# CORS CONFIGURATION
# ===================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ===================================
# ADMIN CREDENTIALS
# ===================================
# Users dengan email/username ini akan otomatis jadi admin
# Format: email atau username (untuk OAuth)
ADMIN_EMAIL_1=fufufafagames.id
ADMIN_EMAIL_2=fufufafagames@gmail.com
ADMIN_USERNAME=fufufafagames